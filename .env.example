# RAF Bomber Command Database - Environment Variables

# OpenAI API Configuration (Required for AI Research System)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Database Configuration
DATABASE_PATH=/tmp/raf_bomber_command.db

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your_secret_key_here

# AI System Configuration
AI_SYSTEM_URL=http://localhost:5002
AI_SYSTEM_TIMEOUT=30

# Security Configuration
RATE_LIMIT_PER_MINUTE=100
CORS_ORIGINS=*

# Memorial Configuration
MEMORIAL_DEDICATION="Their memory lives on - preserved in code, honored in history, accessible to all, never to be forgotten."
PRIMARY_HONOREE="Sergeant Patrick Cassidy"
SERVICE_NUMBER="1802082"

# Deployment Configuration
HOST=0.0.0.0
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/tmp/raf_bomber_command.log

# Performance Configuration
CACHE_TIMEOUT=300
MAX_SEARCH_RESULTS=100

# Accessibility Configuration
WCAG_COMPLIANCE_LEVEL=AA
KEYBOARD_NAVIGATION=enabled
SCREEN_READER_SUPPORT=enabled

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_TRACKING_ID=your_tracking_id_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

